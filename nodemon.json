{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": [
    "index.js",
    "app.js",
    "admin.js",
    "nunenv.js",
    "routes.js",
    "server.js",
    "src/",
    "config/"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js json"
}
